package Entity;

import java.util.ArrayList;
import javax.imageio.ImageIO;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.event.KeyEvent;
import java.awt.image.BufferedImage;

public class Isko extends GameObject{
	
	private Animation animation;
	private ArrayList<BufferedImage[]> sprites;
	private final int[] numFrames = {1, 8};
	private static final int IDLE = 0;
	private static final int RUNNING = 1;
	
	private static final int MAX_SPEED = 4;
	private static final double ACCELERATION = 0.25;
	
	//Action
	private int actionState;
	private boolean running;

	public Isko(int x, int y) {
		super(x, y);
		animation = new Animation();
		sprites = new ArrayList<BufferedImage[]>();
		loadSprites("run", 1);
		loadSprites("run", 8);
		animation.setFrames(sprites.get(IDLE));
		animation.setDelay(100);
	}
	
	public void loadSprites(String s, int n) {
		BufferedImage frame;
		BufferedImage[] bi = new BufferedImage[n];
		for(int i = 0; i < n; i++) {
			try {
				frame = ImageIO.read(getClass().getResourceAsStream(String.format("/Sprites/Isko/%s%d.png", s, i)));
				bi[i] = frame;
			}catch(Exception e) {
				e.printStackTrace();
			}
		}
		sprites.add(bi);
	}
	
	public void updateAction(){
		if(actionState != 1) {
			animation.setFrames(sprites.get(RUNNING));
		}else {
			animation.setFrames(sprites.get(IDLE));
		}
	}
	
	public void updateDimension() {
		BufferedImage image = animation.getImage();
		width = image.getWidth();
		height = image.getHeight();
	}
	
	public void checkPlatformCollision() {
		
	}
	
	public void keyPressed(int k) {
		if(k == KeyEvent.VK_D || k == KeyEvent.VK_A) {
			actionState = 1;
			running = true;
			if(k == KeyEvent.VK_A) {
				ax = -ACCELERATION;
			}
			if(k == KeyEvent.VK_D) {
				ax = ACCELERATION;
			}
		}
	}
	
	public void keyReleased(int k) {
		if(k == KeyEvent.VK_D || k == KeyEvent.VK_A) {
			ax = 0;
		}
	}

	public void updateSpeed(){
		//Move
		if(ax != 0) {
			vx += ax;	
		}else {
			if(vx > 0) {
				vx += -ACCELERATION;
			}else if(vx < 0) {
				vx += ACCELERATION;
			}else {
				actionState = 0;
			}
		}
		vy += ay;	

		//Max Speed
		if(vx > MAX_SPEED) {
			vx = MAX_SPEED;
		}if(vx < -MAX_SPEED) {
			vx = -MAX_SPEED;
		}
		
	}
	public void setPosition() {
		updateSpeed();
		x += vx;
		y += vy;
	}
	
	public void update() {
		
		updateAction();
		updateDimension();
		setPosition();
		checkPlatformCollision();
		animation.update();
		animation.getFrame();

		
	}
	
	public void draw(Graphics2D g) {
		Image image = animation.getImage().getScaledInstance(width * 2, height * 2, BufferedImage.SCALE_DEFAULT);
		g.drawImage(image, x, y, null);
	}

}
